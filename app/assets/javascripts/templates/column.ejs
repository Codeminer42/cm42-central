<% var className = locals.className || 'story_column' %>
<% var id = locals.id %>
<% var name = locals.name %>
<div class="column_header" data-step="<%= id.replace("_", "-") %>">
  <a href="#" class="toggle-title" title="<%= name %>"><%= name %></a>
  <a href="#" class="toggle-column hide_<%= id %>" title="<%= I18n.t('close') %>">&times;</a>
</div>
<div id="<%= id %>" class="column_content <%= className %>"></div>
