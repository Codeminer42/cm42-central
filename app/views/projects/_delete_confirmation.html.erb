<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t('projects.delete project') %></h4>
    </div>
    <div class="modal-body">
      <p> <%= t('projects.index.are you sure you want to delete this project_html', project_name: @project.name) %></p>
      <p> <%= t('projects.delete_confirmation') %></p>
      
      <div class="form-group">
        <input type='textfield' class='form-control auth-form-control' data-project-name="<%=@project.name%>" id='project-name-confirmation'/>
      </div>

      <div class="form-group">
        <div class="clearfix">
          <div class="btn-group actions pull-right clearfix">
            <%= button_to t('delete'), @project,
              disabled: true,
              method: :delete,
              id: 'project-delete',
              class: 'btn btn-danger btn-form' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
