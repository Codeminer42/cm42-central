<% content_for :title_bar do %>
  <%= link_to t('back'), tag_groups_path, class: "btn btn-primary btn-sm navbar-btn" %>
<% end %>

<div class="row">
  <div class="col-xs-12 col-sm-5 col-sm-offset-2">
    <div class="page-header">
      <h4 class="page-header-title darkgrey-2">
        <%= t('projects.edit tag_group') %>
      </h4>
    </div>
  </div>

  <div class="col-xs-12 col-sm-5 col-sm-offset-2">
    <div class="panel card">
      <div class="panel-body">
        <input type="hidden" name='bg-color' data-current-color="<%= @tag_group[:bg_color] %>">
        <%= render 'form', remote: false, tag_group: @tag_group %>
      </div>
    </div>
  </div>
</div>
